/* pages/facility/index.wxss */
@import '../../utils/weui.wxss';
@import '../../utils//common.wxss';
.facility {

}

.facility .header_search {
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 9;
  background: #fff;
}

.facility .header_search .searchTab {

}

.facility .header_search .searchTab .list {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx 30rpx 40rpx;
}

.facility .header_search .searchTab .list .name {
  font-size: 28rpx;
  color: #333333;
  width: 22%;
}

.facility .header_search .searchTab .list .value {
  position: relative;
  width: 78%;
}

.facility .header_search .searchTab .list picker {
  position: relative;
}

.facility .header_search .searchTab .list .value input {
  width: 86%;
  font-size: 28rpx;
  color: #333333;
}

.facility .header_search .searchTab .list .value image {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.facility .header_search .searchTab .list:first-of-type .value image {
  width: 14rpx;
  height: 24rpx;
}

.facility .header_search .searchTab .list:nth-last-of-type(2) .value image {
  width: 36rpx;
  height: 36rpx;
}

.facility .facility_container {

}

.facility .facility_container .lists {

}

.facility .facility_container .lists .list .list_container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.facility .facility_container .lists .list .list_container .list_l {
  padding: 0 30rpx;
  margin-right: 30rpx;
}

.facility .facility_container .lists .list .list_container .list_l image {
  width: 92rpx;
  height: 92rpx;
}

.facility .facility_container .lists .list .list_container .list_r {
  width: calc(100% - 182rpx);
}

.facility .facility_container .lists .list .list_container .list_r {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx 30rpx 0;
  /* border-bottom: 1px solid #D8D8D8; */
}

.facility .facility_container .lists .list .list_container .list_r .list_fl .title {
  font-size: 72rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.facility .facility_container .lists .list .list_container .list_r .list_fl .electric {
  font-size: 26rpx;
  color: #333333;
}

.facility .facility_container .lists .list .list_container .list_r .list_fr image {
  width: 14rpx;
  height: 24rpx;
}

.facility .facility_container .lists .list .list_footer {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.facility .facility_container .lists .list .list_footer view:first-of-type {
  text-align: center;
  font-size: 48rpx;
}

.facility .facility_container .lists .list .list_footer .footer_fr {
  font-size: 26rpx;
  color: #999999;
  width: calc(100% - 152rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.facility .facility_container .lists .list .hongColor {
  color: #E92828;
  font-size: 30rpx;
}

.facility .facility_container .lists .list .huiColor {
  color: #8F9398;
  font-size: 30rpx;
}

.facility .facility_container .lists .list .lvColor {
  color: #67C13A;
  font-size: 30rpx;
}

.facility .noMsg {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -40%);
}

.facility .noMsg .tip {
  margin-bottom: 80rpx;
  text-align: center;
}

.facility .noMsg .tip image {
  width: 174rpx;
  height: 200rpx;
  margin: 0 auto 64rpx;
}

.facility .noMsg .tip text {
  display: block;
  color: #999999;
  font-size: 28rpx;
  text-align: center;
}