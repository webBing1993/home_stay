/* pages/power/index.wxss */
@import '../../utils/common.wxss';
.power {

}

.power .tree_lists {
  padding-bottom: 160rpx;
}

.power .tree_lists .one_tree {
  
}

.power .tree_lists label {
  display: block;
  width: 100%;
}

.power .tree_lists label .label_box {
  padding-left: 30rpx;
}

.power .tree_lists label .label_box view {
  padding: 30rpx 30rpx 30rpx 0;
  position: relative;
  border-bottom: 1px solid #D8D8D8;
  align-items: center;
  display: flex;
}

.power .tree_lists .two_tree label .label_box view {
  padding-left: 60rpx;
}

.power .tree_lists .three_tree label .label_box view {
  padding-left: 80rpx;
}

.power .tree_lists label checkbox {
  margin-right: 30rpx;
}

.power .tree_lists label text {
  font-size: 28rpx;
  color: #333333;
}

.power .tree_lists label .label_box .lableImg {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx 10px;
  border-bottom: none;
}

.power .tree_lists label image {
  width: 24rpx;
  height: 14rpx;
}